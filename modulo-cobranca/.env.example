# ==========================================
# MÓDULO DE COBRANÇA - CONFIGURAÇÃO
# ==========================================

# Porta do servidor (diferente do sistema principal)
PORT=3001

# Ambiente (development, production)
NODE_ENV=development

# ==========================================
# DATABASE (Supabase/PostgreSQL)
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cobranca
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui
DB_SSL=false

# ==========================================
# BRADESCO API CREDENCIAIS
# ==========================================
# Homologação
BRADESCO_CLIENT_ID=seu_client_id_homologacao
BRADESCO_CLIENT_SECRET=seu_client_secret_homologacao
BRADESCO_AMBIENTE=homologacao

# Produção (quando liberado)
# BRADESCO_CLIENT_ID=seu_client_id_producao
# BRADESCO_CLIENT_SECRET=seu_client_secret_producao
# BRADESCO_AMBIENTE=producao

# ==========================================
# JWT / AUTENTICAÇÃO (opcional)
# ==========================================
JWT_SECRET=sua_chave_secreta_jwt

# ==========================================
# NOTIFICAÇÕES (opcional)
# ==========================================
# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=seu_account_sid
TWILIO_AUTH_TOKEN=seu_auth_token
TWILIO_PHONE_NUMBER=+5511999999999
